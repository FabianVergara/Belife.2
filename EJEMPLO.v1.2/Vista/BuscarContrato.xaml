<Window x:Class="Vista.BuscarContrato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="Buscar Contrato" Height="300" Width="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Buscador de Contrato" Margin="10">
            <Grid Margin="10,10,-2,1">
                <Label x:Name="label" Content="Identificador del Contrato:" HorizontalAlignment="Left" Margin="0,7,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <TextBox x:Name="txt_idcontrato" HorizontalAlignment="Left" Height="23" Margin="164,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
                <Button x:Name="btn_buscar" Content="Buscar" HorizontalAlignment="Left" Margin="167,48,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
